<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="/img/apple-icon.png">
  <link rel="icon" type="image/png" href="/img/favicon.png">
  <title>Coign Analytics Portal For Training And Administration</title>
  <!-- Fonts and icons -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet" />
  <!-- Nucleo Icons -->
  <link href="/css/nucleo-icons.css" rel="stylesheet" />
  <link href="/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <link href="/css/nucleo-svg.css" rel="stylesheet" />
  <!-- CSS Files -->
  <link id="pagestyle" href="/css/argon-dashboard.css?v=2.0.4" rel="stylesheet" />
</head>
<body class="g-sidenav-show bg-gray-100">
  <div class="min-height-300 bg-primary position-absolute w-100"></div>
  <!-- Include your sidebar and navbar templates here -->
  <%- include('../includes/sidebar.ejs'); %>
  <main class="main-content position-relative border-radius-lg ">
    <!-- Navbar -->
    <%- include('../includes/navbar.ejs'); %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-md-10">
          <div class="card">
            <div class="card-body">
              <p class="text-uppercase text-sm">Add College Data</p>
              <%if(typeof message !='undefined'){%>
                <div class="alert alert-custom" role="alert">
                  <span><%= message %></span>
                </div>
                <%}%>
              <form action="/manage/add-college-data" method="post" enctype="multipart/form-data" name="college-data">
                <!-- College Name -->
                <div class="form-group">
                  <label for="college-name" class="form-control-label">College Name:</label>
                  <input class="form-control" type="text" id="college-name" name="name" required>
                </div>
                <!-- Excel Sheet -->
                <div class="form-group">
                  <label for="excel-sheet" class="form-control-label">Excel Sheet (XLSX or XLS):</label>
                  <input class="form-control" type="file" id="excel-sheet" name="excel" accept=".xlsx, .xls" required>
                </div>
                <!-- Submit Button -->
                <button class="btn btn-primary btn-sm ms-auto" type="submit">Upload College Data</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Include your footer template here -->
    <%- include('../includes/footer'); %>
  </main>
  <!-- Include your scripts here -->
</body>
</html>
