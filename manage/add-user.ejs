<body class="g-sidenav-show   bg-gray-100">
  <div class="min-height-300 bg-primary position-absolute w-100"></div>
  <%- include('../includes/sidebar.ejs'); %>
  <main class="main-content position-relative border-radius-lg ">
    <!-- Navbar -->
    <%- include('../includes/navbar.ejs'); %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
        <div class="row">
          <div class="col-md-10">
            <div class="card">
              
              <div class="card-body">

                <p class="text-uppercase text-sm">User Information</p>
                <%if(typeof message !='undefined'){%>
                    <div class="alert alert-custom" role="alert">
                      <span><%= message %></span>
                    </div>
                    <%}%>
                <form action="/manage/add-user" method="Post" name="adduser" enctype="multipart/form-data">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Username</label>
                      <input class="form-control" type="text" name="username"  onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Email address</label>
                      <input class="form-control" type="email" name="email"  onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Phone Number</label>
                      <input class="form-control" type="text" name="phone"  onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                
                </div>
                <hr class="horizontal dark">
                <p class="text-uppercase text-sm">Contact Information</p>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Address</label>
                      <input class="form-control" type="text" name="addr"  onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">City</label>
                      <input class="form-control" type="text" name="city" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Country</label>
                      <input class="form-control" type="text" name="country" value="India" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Postal code</label>
                      <input class="form-control" type="text" name="pincode" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                </div>

                <hr class="horizontal dark">
                <p class="text-uppercase text-sm">Bank Information</p>
                <div class="row">
                  
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Bank Name</label>
                      <input class="form-control" type="text" name="bname" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Branch Code</label>
                      <input class="form-control" type="text" name="bcode" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Account Number</label>
                      <input class="form-control" type="text" name="anumber" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">IFSC Number</label>
                      <input class="form-control" type="text"  name="ifsc" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                </div>
            
                <hr class="horizontal dark">
                <p class="text-uppercase text-sm">Personal Details</p>
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Resume</label>
                      <input class="form-control" type="file" name="resume" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Adhar Card</label>
                      <input class="form-control" type="file" name="adhar" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Pan Card</label>
                      <input class="form-control" type="file" name="pan" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Photo Graph</label>
                      <input class="form-control" type="file" name="photo" onfocus="focused(this)" onfocusout="defocused(this)" >
                    </div>
                  </div>

                <hr class="horizontal dark">
                <p class="text-uppercase text-sm">User Role </p>
                <div class="row">
                  <div class="col-md-4">
                    <div class="form-group">
                      <label for="example-text-input" class="form-control-label">Select Role Type</label>
                      <select class="form-control" id="role" onchange="checkTrainer()"name="role">
                        <option value ="" selected>Select</option>
                        <option value="1">Moderator</option>
                        <option value="2">Trainer</option>
                      </select>
                    </div>
                  </div>
                    <div class="col-md-4" id="newFeild" style="display: none;">
                        <div class="form-group">
                          <label for="example-text-input" class="form-control-label">Select Trainer Type</label>
                          <select class="form-control" id="type" name="type">
                            <option value="" selected>Select</option>
                            <option value="1">Full Timer</option>
                            <option value="2">Free Lancer</option>
                          </select>
                        </div>
                     </div>
                     <div class="col-md-4">
                      <div class="form-group">
                        <label for="example-text-input" class="form-control-label">Salary</label>
                        <input class="form-control" type="text" name="salary" onfocus="focused(this)" onfocusout="defocused(this)" >
                      </div>
                    </div>
                </div>
                </div>

                <button class="btn btn-primary btn-sm ms-auto" type="submit" name="submit" >Submit </button>
                </form>
              </div>
            </div>
          </div>
         
      </div>
  
      <footer class="footer pt-3  ">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
              <div class="copyright text-center text-sm text-muted text-lg-start">
                Â© <script>
                  document.write(new Date().getFullYear())
                </script>,
                Developed by
                <a  class="font-weight-bold" target="_blank">Leantech Labs</a>
                
              </div>
            </div>
            
          </div>
        </div>
      </footer>
    </div>
  </main>
  
  <!--   Core JS Files   -->
  <script src="/js/core/popper.min.js"></script>
  <script src="/js/core/bootstrap.min.js"></script>
  <script src="/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="/js/plugins/chartjs.min.js"></script>
  <script>
    function checkTrainer()
    {
        var newFeild = document.getElementById('newFeild')
        var valueIn = document.getElementById('role').value;
        if(valueIn=="2")
        {
            newFeild.style.display="block";
        }else{
            newFeild.style.display="none";
        }

    }

    var ctx1 = document.getElementById("chart-line").getContext("2d");

    var gradientStroke1 = ctx1.createLinearGradient(0, 230, 0, 50);

    gradientStroke1.addColorStop(1, 'rgba(94, 114, 228, 0.2)');
    gradientStroke1.addColorStop(0.2, 'rgba(94, 114, 228, 0.0)');
    gradientStroke1.addColorStop(0, 'rgba(94, 114, 228, 0)');
    new Chart(ctx1, {
      type: "line",
      data: {
        labels: ["Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"],
        datasets: [{
          label: "Mobile apps",
          tension: 0.4,
          borderWidth: 0,
          pointRadius: 0,
          borderColor: "#5e72e4",
          backgroundColor: gradientStroke1,
          borderWidth: 3,
          fill: true,
          data: [50, 40, 300, 220, 500, 250, 400, 230, 500],
          maxBarThickness: 6

        }],
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false,
          }
        },
        interaction: {
          intersect: false,
          mode: 'index',
        },
        scales: {
          y: {
            grid: {
              drawBorder: false,
              display: true,
              drawOnChartArea: true,
              drawTicks: false,
              borderDash: [5, 5]
            },
            ticks: {
              display: true,
              padding: 10,
              color: '#fbfbfb',
              font: {
                size: 11,
                family: "Open Sans",
                style: 'normal',
                lineHeight: 2
              },
            }
          },
          x: {
            grid: {
              drawBorder: false,
              display: false,
              drawOnChartArea: false,
              drawTicks: false,
              borderDash: [5, 5]
            },
            ticks: {
              display: true,
              color: '#ccc',
              padding: 20,
              font: {
                size: 11,
                family: "Open Sans",
                style: 'normal',
                lineHeight: 2
              },
            }
          },
        },
      },
    });
  </script>
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="/js/argon-dashboard.min.js?v=2.0.4"></script>
</body>

</html>